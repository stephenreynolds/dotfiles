[core]
editor = nvim
pager = delta

[core.whitespace]
tabwidth = 4

[credential]
credentialStore = secretservice
	helper = 
	helper = /usr/bin/git-credential-manager

[user]
name = Stephen Reynolds
email = mail@stephenreynolds.dev

[color]
ui = true;

[init]
defaultBranch = main

[merge]
conflictStyle = diff3

[pull]
rebase = true

[diff]
colorMoved = default

[interactive]
diffFilter = delta --color-only --features=interactive

[delta]
navigate = true
side-by-side = true
line-number = true
features = decorations
[credential "https://dev.azure.com"]
	useHttpPath = true
