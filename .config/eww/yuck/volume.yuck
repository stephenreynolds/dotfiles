(defwidget volume []
  (eventbox
    :onclick "pavucontrol &"
    :onmiddleclick "pamixer --toggle-mute"
    :onscroll "scripts/set_volume {}"
    :class "volume"
    (label :class "volume-icon icon"
           :visible {volume != "muted"}
           :text {volume == "muted" ? "婢" : volume > 66 ? "" : volume > 33 ? "" : volume > 0 ? "" : ""})))
